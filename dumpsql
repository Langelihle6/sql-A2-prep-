                        (3, 'Naledi Khumalo', 'naledi.k@corp.com', 'Marketing', 'employee3_blob'),
                        (4, 'Sipho Ndlovu', 'sipho.n@corp.com', 'Operations', 'employee4_blob');

                        CREATE TABLE projects (
                            id INTEGER PRIMARY KEY,
                                title TEXT NOT NULL,
                                    description TEXT NOT NULL,
                                        budget INTEGER,
                                            document BLOB
                                            ) STRICT;

                                            INSERT INTO projects (id, title, description, budget, document) 
                                            VALUES
                                            (101, 'Digital Transformation', 'Upgrade internal systems to cloud-based solutions.', 500000, 'project_doc_blob1'),
                                            (102, 'Customer Engagement Campaign', 'Develop a marketing campaign to increase client retention.', 300000, 'project_doc_blob2'),
                                            (103, 'Financial Audit 2025', 'Conduct a full internal audit of all financial operations.', 150000, 'project_doc_blob3');

                                            CREATE TABLE assignments (
                                                id INTEGER PRIMARY KEY,
                                                    employee_id INTEGER NOT NULL,
                                                        project_id INTEGER NOT NULL,
                                                            role TEXT NOT NULL,
                                                                progress_report BLOB,
                                                                    FOREIGN KEY (employee_id) REFERENCES employees(id),
                                                                        FOREIGN KEY (project_id) REFERENCES projects(id)
                                                                        ) STRICT ;

                                                                        INSERT INTO assignments (id, employee_id, project_id, role, progress_report) 
