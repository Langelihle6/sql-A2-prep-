                                                                        (204, 4, 101, 'Operations Analyst', 'ops_summary_blob');

                                                                        CREATE TABLE departments (
                                                                            id INTEGER PRIMARY KEY,
                                                                                name TEXT NOT NULL,
                                                                                    manager TEXT,
                                                                                        description TEXT,
                                                                                            logo BLOB
                                                                                            ) STRICT;

                                                                                            INSERT INTO departments (id, name, manager, description, logo) 
