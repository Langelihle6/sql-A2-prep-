CREATE TABLE employees (
id INTEGER PRIMARY KEY,
            name TEXT NOT NULL,
                email TEXT NOT NULL,
                    department TEXT NOT NULL,
                        profile_picture BLOB
                        ) STRICT;

                        INSERT INTO employees (id, name, email, department, profile_picture) 
                        VALUES
                        (1, 'Lerato Mokoena', 'lerato.m@corp.com', 'Finance', 'employee1_blob'),
